<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><img src="" alt="<%= title %>"></a>
        </div>
        <div class="navbar-collapse collapse">
            <div id="userbar">
                <% if (!user) { %>
                        <h2 id="login">Welcome! Please log in.<a href="/auth/steam"><img src="/images/steam_auth.png" /></a></h2>
                <% } else { %>
                    <h2>Hello,
                        <a href="/account"><img src=<%= user.photos && user.photos.length? user.photos[0].value: "" %> /><%= user.displayName %>.</a>
                    </h2>
                    <li id="logout"><a href="/logout">Logout </a></li>
                    <% if (user.isAdmin) { %>
                        <li id="adminPage"><a href="/adminpage"><img src="/images/adminButton_24.png" /></a></li>
                    <% }%>
                <% }%>
            </div>
        </div>
        <!--/.navbar-collapse -->
    </div>
</div>