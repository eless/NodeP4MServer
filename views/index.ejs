
<% if (!user) { %>
<h2>Welcome! Please log in.</h2>
<a href="/auth/steam">Sign On with Steam</a>
<% } else { %>
<h2>Hello, <img src=<%= user.photos && user.photos.length? user.photos[0].value: "" %> /><%= user.displayName %>.</h2>
<a href="/account">Go to profile</a>
<p><a href="/logout">Logout </a></p>
<% } %>